---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

const navigationLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/servicios', label: 'Servicios' },
  { href: '/sobre-mi', label: 'Sobre Mí' },
  { href: '/contacto', label: 'Contacto' }
];

const serviceLinks = [
  { href: '/servicios#tributario', label: 'Asesoría Tributaria' },
  { href: '/servicios#laboral', label: 'Gestión Laboral' },
  { href: '/servicios#societario', label: 'Servicios Societarios' },
  { href: '/servicios#financiero', label: 'Estados Financieros' }
];
---

<footer class="bg-gray-900 text-white">

  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">

      <!-- Company Info -->
      <div class="lg:col-span-2">
        <!-- Logo & Brand -->
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center shadow-lg">
            <i class="fas fa-chart-line text-white text-xl"></i>
          </div>
          <div>
            <div class="text-xl font-bold">Eugenia Guerrero</div>
            <div class="text-sm text-gray-400">Contadora Pública Autorizada</div>
          </div>
        </div>

        <!-- Description -->
        <p class="text-gray-300 mb-6 max-w-md leading-relaxed">
          Soluciones contables integrales para personas naturales y jurídicas en Cuenca Ecuador.
          Más de 15 años de experiencia respaldando el crecimiento de nuestros clientes.
        </p>

        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="flex items-center gap-3 text-gray-300">
            <div class="w-8 h-8 bg-gray-800 rounded-lg flex items-center justify-center">
              <i class="fas fa-envelope text-primary-400 text-sm"></i>
            </div>
            <a href="mailto:eugecsg@gmail.com" class="hover:text-primary-400 transition-colors">
              eugecsg@gmail.com
            </a>
          </div>

          <div class="flex items-center gap-3 text-gray-300">
            <div class="w-8 h-8 bg-gray-800 rounded-lg flex items-center justify-center">
              <i class="fas fa-phone text-primary-400 text-sm"></i>
            </div>
            <a href="tel:+593987919930" class="hover:text-primary-400 transition-colors">
              +593 98 791 9930
            </a>
          </div>

          <div class="flex items-center gap-3 text-gray-300">
            <div class="w-8 h-8 bg-gray-800 rounded-lg flex items-center justify-center">
              <i class="fas fa-map-marker-alt text-primary-400 text-sm"></i>
            </div>
            <span>Cuenca, Azuay, Ecuador</span>
          </div>
        </div>
      </div>

      <!-- Navigation Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Enlaces</h4>
        <nav class="space-y-2">
          {navigationLinks.map(link => (
              <a
                  href={link.href}
                  class="block text-gray-300 hover:text-primary-400 transition-colors duration-200 py-1"
              >
                {link.label}
              </a>
          ))}
        </nav>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Servicios</h4>
        <nav class="space-y-2">
          {serviceLinks.map(link => (
              <a
                  href={link.href}
                  class="block text-gray-300 hover:text-primary-400 transition-colors duration-200 py-1 text-sm"
              >
                {link.label}
              </a>
          ))}
        </nav>
      </div>

    </div>

    <!-- CTA Section -->
    <div class="mt-12 pt-8 border-t border-gray-800">

  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-800 bg-gray-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">

        <!-- Copyright -->
        <div class="text-center md:text-left">
          <p class="text-gray-400 text-sm">
            © {currentYear} Eugenia Guerrero CPA. Todos los derechos reservados.
          </p>
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <span class="text-gray-500 text-sm">Síguenos:</span>
          <div class="flex gap-3">
            <a
                href="https://wa.me/593987919930"
                target="_blank"
                rel="noopener noreferrer"
                class="w-8 h-8 bg-gray-800 hover:bg-green-600 rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-110"
                title="WhatsApp"
            >
              <i class="fab fa-whatsapp text-sm"></i>
            </a>
            <a
                href="mailto:eugecsg@gmail.com"
                class="w-8 h-8 bg-gray-800 hover:bg-primary-600 rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-110"
                title="Email"
            >
              <i class="fas fa-envelope text-sm"></i>
            </a>
            <a
                href="#"
                class="w-8 h-8 bg-gray-800 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-110"
                title="LinkedIn"
            >
              <i class="fab fa-linkedin-in text-sm"></i>
            </a>
          </div>
        </div>

        <!-- Developer Credit -->
        <div class="text-center md:text-right">
          <p class="text-gray-500 text-xs">
            Sitio web desarrollado por
            <a
                href="https://torisoftt.com"
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary-400 hover:text-primary-300 transition-colors duration-200 font-medium"
            >
              Torisoftt
            </a>
          </p>
        </div>

      </div>
    </div>
  </div>

</footer>