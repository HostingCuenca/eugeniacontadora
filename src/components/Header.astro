---
// src/components/Header.astro

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/sobre-mi', label: 'Nosotros' },
  { href: '/servicios', label: 'Servicios' },
  { href: '#testimonials', label: 'Clientes' },
  { href: '/contacto', label: 'Contacto' }
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '';
  return currentPath.startsWith(href.slice(1));
};
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity duration-200">
        <div class="w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
          <i class="fas fa-calculator text-white text-lg"></i>
        </div>
        <div class="font-bold text-xl text-gray-900 tracking-tight">CONTALOGIC</div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-1">
        {navItems.map(({ href, label }) => (
            <a
                href={href}
                class={`px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200 ${
                    isActive(href)
                        ? 'text-primary-600 bg-primary-50 font-semibold'
                        : 'text-gray-600 hover:text-primary-600 hover:bg-primary-50'
                }`}
            >
              {label}
            </a>
        ))}
      </nav>

      <!-- Desktop Actions -->
      <div class="hidden md:flex items-center gap-3">
        <a
            href="/contacto"
            class="flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg text-sm"
        >
          <span>Solicitar Cotización</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200"
          aria-label="Menú"
      >
        <div class="w-6 h-6 flex flex-col justify-center space-y-1">
          <span class="block w-6 h-0.5 bg-gray-600 transition-all duration-300 hamburger-1"></span>
          <span class="block w-6 h-0.5 bg-gray-600 transition-all duration-300 hamburger-2"></span>
          <span class="block w-6 h-0.5 bg-gray-600 transition-all duration-300 hamburger-3"></span>
        </div>
      </button>

    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden fixed inset-0 z-50 opacity-0 invisible transition-all duration-300">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="mobile-overlay"></div>

    <!-- Menu Content -->
    <div class="absolute right-0 top-0 h-full w-80 max-w-[90vw] bg-white shadow-2xl transform translate-x-full transition-transform duration-300" id="mobile-content">

      <!-- Header -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-primary-500 rounded-lg flex items-center justify-center">
            <i class="fas fa-calculator text-white text-sm"></i>
          </div>
          <span class="font-bold text-lg text-gray-900">CONTALOGIC</span>
        </div>
        <button id="mobile-close" class="w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 flex items-center justify-center transition-colors">
          <i class="fas fa-times text-gray-600"></i>
        </button>
      </div>

      <!-- Navigation -->
      <nav class="p-6 space-y-2">
        {navItems.map(({ href, label }) => (
            <a
                href={href}
                class={`block px-4 py-3 rounded-xl font-medium transition-all duration-200 ${
                    isActive(href)
                        ? 'text-primary-600 bg-primary-50 font-semibold'
                        : 'text-gray-700 hover:text-primary-600 hover:bg-primary-50'
                }`}
            >
              {label}
            </a>
        ))}
      </nav>

      <!-- Mobile Actions -->
      <div class="p-6 space-y-3 border-t border-gray-200">
        <a
            href="/contacto"
            class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-colors duration-200"
        >
          Solicitar Cotización
        </a>

        <button
            onclick="sendWhatsApp()"
            class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-green-500 hover:bg-green-600 text-white font-semibold rounded-lg transition-colors duration-200"
        >
          <i class="fab fa-whatsapp"></i>
          WhatsApp
        </button>
      </div>

      <!-- Contact Info -->
      <div class="p-6 bg-gray-50 border-t border-gray-200 space-y-3">
        <div class="flex items-center gap-3 text-sm text-gray-600">
          <i class="fas fa-phone w-4"></i>
          <span>+593 98 791 9930</span>
        </div>
        <div class="flex items-center gap-3 text-sm text-gray-600">
          <i class="fas fa-envelope w-4"></i>
          <span>contacto@contalogic.com</span>
        </div>
        <div class="flex items-center gap-3 text-sm text-gray-600">
          <i class="fas fa-map-marker-alt w-4"></i>
          <span>Cuenca, Ecuador</span>
        </div>
      </div>

    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileContent = document.getElementById('mobile-content');
  const mobileClose = document.getElementById('mobile-close');
  const mobileOverlay = document.getElementById('mobile-overlay');
  const hamburgers = document.querySelectorAll('[class*="hamburger-"]');

  function openMobileMenu() {
    mobileMenu?.classList.remove('opacity-0', 'invisible');
    mobileContent?.classList.remove('translate-x-full');
    mobileMenuBtn?.classList.add('active');

    // Animate hamburger
    if (hamburgers[0]) hamburgers[0].classList.add('rotate-45', 'translate-y-1.5');
    if (hamburgers[1]) hamburgers[1].classList.add('opacity-0');
    if (hamburgers[2]) hamburgers[2].classList.add('-rotate-45', '-translate-y-1.5');

    document.body.style.overflow = 'hidden';
  }

  function closeMobileMenu() {
    mobileMenu?.classList.add('opacity-0', 'invisible');
    mobileContent?.classList.add('translate-x-full');
    mobileMenuBtn?.classList.remove('active');

    // Reset hamburger
    if (hamburgers[0]) hamburgers[0].classList.remove('rotate-45', 'translate-y-1.5');
    if (hamburgers[1]) hamburgers[1].classList.remove('opacity-0');
    if (hamburgers[2]) hamburgers[2].classList.remove('-rotate-45', '-translate-y-1.5');

    document.body.style.overflow = '';
  }

  mobileMenuBtn?.addEventListener('click', openMobileMenu);
  mobileClose?.addEventListener('click', closeMobileMenu);
  mobileOverlay?.addEventListener('click', closeMobileMenu);

  // Close menu when clicking on navigation links
  document.querySelectorAll('#mobile-menu a[href]').forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });
</script>