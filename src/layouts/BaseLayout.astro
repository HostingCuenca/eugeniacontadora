                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" class="text-gray-700 hover:text-primary-600 transition-colors" id="mobile-menu-button">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div class="md:hidden hidden glass rounded-b-2xl mx-4" id="mobile-menu">
            <div class="px-4 py-6 space-y-4">
                <a href="/" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors">Inicio</a>
                <a href="/#sobre-nosotros" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors">Nosotros</a>
                <a href="/servicios" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors">Servicios</a>
                <a href="/planes" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors">Planes</a>
