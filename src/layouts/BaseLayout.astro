    <!-- WhatsApp Floating Button -->
    <div class="fixed bottom-6 right-6 z-50">
        <button onclick="openWhatsAppModal()" class="bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-2xl hover:scale-110 transition-all duration-300 animate-pulse group">
