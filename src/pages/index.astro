<script>
  // Validación y envío del formulario mejorado
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();

    const formData = new FormData(e.target as HTMLFormElement);
    const name = formData.get('name');
    const ruc = formData.get('ruc');
    const phone = formData.get('phone');
    const service = formData.get('service');
    const message = formData.get('message');

    // Validar RUC
    const rucStr = ruc?.toString() || '';
    if (rucStr.length !== 13) {
      alert('❌ El RUC debe tener exactamente 13 dígitos');
      return;
    }

    if (!rucStr.endsWith('001')) {
      alert('❌ El RUC debe terminar en 001');
      return;
    }

    // Validar que sea solo números
    if (!/^\d+$/.test(rucStr)) {
      alert('❌ El RUC debe contener solo números');
      return;
    }

    // Crear mensaje formateado para WhatsApp
    let whatsappMessage = `🏢 *NUEVA SOLICITUD DE COTIZACIÓN*\n\n`;
    whatsappMessage += `👤 *Empresa/Persona:* ${name}\n`;
    whatsappMessage += `📋 *RUC:* ${rucStr}\n`;
    whatsappMessage += `📱 *Teléfono:* ${phone}\n`;
    whatsappMessage += `💼 *Servicio:* ${service}\n`;

    if (message) {
      whatsappMessage += `\n📝 *Mensaje adicional:*\n${message}\n`;
    }

    whatsappMessage += `\n✅ Formulario enviado desde contalogic.com`;

    // Enviar por WhatsApp
    (window as any).sendWhatsApp(whatsappMessage);

    // Resetear formulario
    (e.target as HTMLFormElement).reset();

    // Mostrar confirmación
    alert('✅ ¡Formulario validado! Serás redirigido a WhatsApp para completar tu consulta.');
  });

  // Validación en tiempo real del RUC
  document.getElementById('ruc')?.addEventListener('input', function(e) {
    const input = e.target as HTMLInputElement;
    const value = input.value;

    // Solo permitir números
    input.value = value.replace(/\D/g, '');

    // Validación visual
    if (input.value.length === 13) {
      if (input.value.endsWith('001')) {
        input.classList.remove('border-red-300');
        input.classList.add('border-green-500');
      } else {
        input.classList.remove('border-green-500');
        input.classList.add('border-red-300');
      }
    } else {
      input.classList.remove('border-green-500', 'border-red-300');
    }
  });
</script>
