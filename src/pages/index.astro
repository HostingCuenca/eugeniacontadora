---
// src/pages/index.astro - CONTALOGIC
import BaseLayout from '../layouts/BaseLayout.astro';

// Importar las imágenes
import heroImage from '../assets/hero.jpeg';
import nosotrosImage from '../assets/nosotros.jpeg';
import sectionImage from '../assets/section.jpeg';
import contadorPublicoImage from '../assets/contador-publico.jpg';
import superintendenciaImage from '../assets/WhatsApp-Image-2018-10-24-at-15.23.23.jpeg';
import superintendenciaLogo from '../assets/logo_login.png.png';

// Importar logos de empresas
import auditedCIA from '../assets/auditedCIALTDA.png';
import clinicaEspana from '../assets/clinicaespaña.png';
import coac27deAbril from '../assets/coac27deabril.png';
import cooperativaArtesanal from '../assets/cooperativaahorroycredicoartesanaldelazuay.png';
import importadoraCedillo from '../assets/importadoracedillo.png';
import importadoraEcuadorMundial from '../assets/importadoraexportadoraecuadormundial.png';

// Servicios principales - Adaptados para Contalogic
const services = [
  {
    title: 'Asesoría Tributaria SRI',
    description: 'Declaraciones, anexos y gestión completa ante el SRI. Mantén tu empresa al día con las obligaciones tributarias.',
    icon: 'fas fa-calculator',
    image: sectionImage.src,
    logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/e/e8/SRI.svg/1280px-SRI.svg.png'
  },
  {
    title: 'Gestión Laboral IESS',
    description: 'Roles de pago, avisos de entrada y salida, préstamos y gestión completa de seguridad social.',
    icon: 'fas fa-users',
    image: heroImage.src,
    logo: 'https://upload.wikimedia.org/wikipedia/commons/c/c0/IESS_Ecuador.jpg'
  },
  {
    title: 'Ministerio de Trabajo',
    description: 'Contratos laborales, actas de finiquito, décimos y todo lo relacionado con el Ministerio de Trabajo.',
    icon: 'fas fa-briefcase',
    image: nosotrosImage.src,
    logo: 'https://portalecuador.com/entities/ministerio-del-trabajo-ecuador-logo.png'
  },
  {
    title: 'Superintendencia de Compañías',
    description: 'Estados financieros, cumplimiento NIIF, reportes anuales y gestión completa ante la Superintendencia de Compañías.',
    icon: 'fas fa-building',
    image: superintendenciaImage.src,
    logo: superintendenciaLogo.src
  }
];

// Estadísticas
const stats = [
  { number: '1245', label: 'Clientes Activos' },
  { number: '6524', label: 'Declaraciones SRI' },
  { number: '8248', label: 'Roles Procesados' },
  { number: '9731', label: 'Horas de Asesoría' }
];

// Equipo
const team = [
  {
    name: 'Eugenia Guerrero',
    role: 'CEO & Contadora Principal',
    image: nosotrosImage.src,
    social: {
      linkedin: '#',
      twitter: '#',
      facebook: '#',
      instagram: '#'
    }
  },
  {
    name: 'María González',
    role: 'Especialista IESS',
    image: heroImage.src,
    social: {
      linkedin: '#',
      twitter: '#',
      facebook: '#',
      instagram: '#'
    }
  },
  {
    name: 'Carlos Pérez',
    role: 'Asesor Tributario',
    image: sectionImage.src,
    social: {
      linkedin: '#',
      twitter: '#',
      facebook: '#',
      instagram: '#'
    }
  }
];
---

<BaseLayout
    title="Contalogic | Servicios Contables Profesionales en Ecuador"
    description="Contalogic ofrece servicios contables profesionales, asesoría tributaria SRI, gestión laboral IESS y consultoría empresarial en Ecuador."
>

  <!-- Hero Section - Diseño tecnológico sutil -->
  <section class="relative py-20 lg:py-32 overflow-hidden">
    <!-- Gradiente de fondo principal -->
    <div class="absolute inset-0 bg-gradient-to-br from-white via-gray-50 to-blue-50/30"></div>

    <!-- Grid pattern sutil -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(91, 111, 237, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(91, 111, 237, 0.5) 1px, transparent 1px); background-size: 50px 50px;"></div>

    <!-- Elementos decorativos tecnológicos -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Círculos gradientes sutiles -->
      <div class="absolute top-20 left-10 w-96 h-96 bg-gradient-to-br from-primary-200/20 to-transparent rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-[500px] h-[500px] bg-gradient-to-br from-blue-200/15 to-transparent rounded-full blur-3xl"></div>

      <!-- Líneas decorativas -->
      <div class="absolute top-1/4 left-0 w-64 h-px bg-gradient-to-r from-transparent via-primary-300/30 to-transparent"></div>
      <div class="absolute top-1/3 right-0 w-80 h-px bg-gradient-to-r from-transparent via-blue-300/25 to-transparent"></div>
      <div class="absolute bottom-1/4 left-1/4 w-72 h-px bg-gradient-to-r from-transparent via-primary-200/20 to-transparent"></div>

      <!-- Puntos decorativos -->
      <div class="absolute top-40 right-1/4 w-2 h-2 bg-primary-400/30 rounded-full"></div>
      <div class="absolute top-60 left-1/3 w-1.5 h-1.5 bg-blue-400/25 rounded-full"></div>
      <div class="absolute bottom-40 right-1/3 w-2 h-2 bg-primary-300/20 rounded-full"></div>
      <div class="absolute bottom-60 left-1/4 w-1 h-1 bg-blue-300/30 rounded-full"></div>

      <!-- Formas geométricas sutiles -->
      <svg class="absolute top-20 right-20 w-32 h-32 opacity-[0.04]" viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="40" fill="none" stroke="currentColor" stroke-width="0.5" class="text-primary-500"/>
        <circle cx="50" cy="50" r="30" fill="none" stroke="currentColor" stroke-width="0.5" class="text-primary-500"/>
      </svg>

      <svg class="absolute bottom-32 left-16 w-24 h-24 opacity-[0.03]" viewBox="0 0 100 100">
        <polygon points="50,10 90,90 10,90" fill="none" stroke="currentColor" stroke-width="0.5" class="text-blue-500"/>
      </svg>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto space-y-8">

        <!-- Badge con efecto glass -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm shadow-lg shadow-primary-500/10 rounded-full text-sm font-medium text-gray-700 border border-white/20">
          <i class="fas fa-certificate text-primary-500"></i>
          <span>Servicios Contables Profesionales</span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          La Marca del futuro en <br />
          <span class="gradient-text">Contabilidad y Auditoría + IA</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Simplificamos la gestión contable y tributaria de tu empresa.
          Expertos en SRI, IESS y Ministerio de Trabajo en Ecuador.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
          <a
              href="#contacto"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-all duration-300 shadow-lg shadow-primary-500/25 hover:shadow-xl hover:shadow-primary-500/40 hover:scale-105"
          >
            <span>Comenzar Ahora</span>
            <i class="fas fa-arrow-right"></i>
          </a>

          <a
              href="#servicios"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/80 backdrop-blur-sm hover:bg-white text-gray-700 font-semibold rounded-lg transition-all duration-300 border-2 border-gray-200 hover:border-primary-300 shadow-lg shadow-black/5"
          >
            <span>Conocer Más</span>
          </a>
        </div>

      </div>
    </div>
  </section>

  <!-- Banner Tecnológico: Nuestros Servicios -->
  <section class="py-6 lg:py-8 bg-gradient-to-br from-gray-50 via-blue-50/30 to-gray-50 relative overflow-hidden">

    <!-- Elementos decorativos tecnológicos -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Círculos gradientes -->
      <div class="absolute top-1/2 left-10 w-64 h-64 bg-gradient-to-br from-primary-200/20 to-transparent rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 right-10 w-72 h-72 bg-gradient-to-br from-blue-200/15 to-transparent rounded-full blur-3xl"></div>

      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(91, 111, 237, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(91, 111, 237, 0.5) 1px, transparent 1px); background-size: 40px 40px;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Tarjeta/Banner principal con imagen -->
      <div class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 rounded-2xl shadow-2xl border border-blue-500/20 overflow-hidden">

        <!-- Elementos decorativos internos -->
        <div class="absolute top-6 right-6 w-32 h-32 bg-gradient-to-br from-primary-400/20 to-transparent rounded-full blur-2xl"></div>
        <div class="absolute bottom-6 left-6 w-40 h-40 bg-gradient-to-br from-blue-400/20 to-transparent rounded-full blur-2xl"></div>

        <!-- Grid: Imagen + Contenido -->
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-0 items-center">

          <!-- Imagen izquierda -->
          <div class="relative h-48 lg:h-full lg:col-span-2 min-h-[280px] overflow-hidden">
            <img
                src={contadorPublicoImage.src}
                alt="Contador Público - Servicios Profesionales"
                class="w-full h-full object-cover"
            />
            <!-- Overlay gradiente -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-slate-900/50 to-slate-900 lg:via-transparent lg:to-slate-900"></div>
          </div>

          <!-- Contenido derecha -->
          <div class="relative px-6 py-6 md:px-8 md:py-8 lg:px-10 lg:py-8 lg:col-span-3">

            <div class="space-y-4">

              <!-- Badge tecnológico -->
              <div class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-primary-500/20 via-blue-500/20 to-primary-500/20 backdrop-blur-sm rounded-full border border-primary-400/30 shadow-lg">
                <div class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></div>
                <i class="fas fa-microchip text-primary-300 text-sm"></i>
                <span class="text-sm font-bold text-white uppercase tracking-wide">Tecnología + Experiencia</span>
              </div>

              <!-- Descripción principal -->
              <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-white leading-tight">
                Te ayudamos en el desarrollo de tu <span class="bg-gradient-to-r from-primary-400 to-blue-400 text-transparent bg-clip-text">Contabilidad</span>,
                <span class="bg-gradient-to-r from-primary-400 to-blue-400 text-transparent bg-clip-text">declaración de Impuestos</span>,
                <span class="bg-gradient-to-r from-primary-400 to-blue-400 text-transparent bg-clip-text">presentación de estados financieros</span> y
                <span class="bg-gradient-to-r from-primary-400 to-blue-400 text-transparent bg-clip-text">nómina</span>
              </h2>

              <p class="text-base md:text-lg text-gray-300 leading-relaxed">
                Con nuestros servicios podrás conocer y tomar una decisión <strong class="text-white">confiable, acertada y oportuna</strong>
                en las finanzas de tu negocio.
              </p>

              <!-- Características con diseño tech -->
              <div class="flex flex-wrap gap-2 pt-4">
                <div class="group inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-br from-primary-500/20 to-primary-600/10 backdrop-blur-sm rounded-lg border border-primary-400/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                  <div class="w-6 h-6 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center shadow-md">
                    <i class="fas fa-shield-alt text-white text-xs"></i>
                  </div>
                  <span class="text-xs font-semibold text-white">Confiable</span>
                </div>

                <div class="group inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-br from-blue-500/20 to-blue-600/10 backdrop-blur-sm rounded-lg border border-blue-400/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                  <div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-md">
                    <i class="fas fa-bullseye text-white text-xs"></i>
                  </div>
                  <span class="text-xs font-semibold text-white">Acertada</span>
                </div>

                <div class="group inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-br from-primary-500/20 to-blue-500/10 backdrop-blur-sm rounded-lg border border-primary-400/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                  <div class="w-6 h-6 bg-gradient-to-br from-primary-500 to-blue-500 rounded-lg flex items-center justify-center shadow-md">
                    <i class="fas fa-clock text-white text-xs"></i>
                  </div>
                  <span class="text-xs font-semibold text-white">Oportuna</span>
                </div>
              </div>

              <!-- Línea decorativa con puntos -->
              <div class="flex items-center gap-2 pt-3">
                <div class="w-1.5 h-1.5 bg-primary-400 rounded-full"></div>
                <div class="w-12 h-0.5 bg-gradient-to-r from-primary-400 to-blue-400"></div>
                <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
                <div class="w-12 h-0.5 bg-gradient-to-r from-blue-400 to-primary-400"></div>
                <div class="w-1.5 h-1.5 bg-primary-400 rounded-full"></div>
              </div>

            </div>

          </div>

        </div>

      </div>

    </div>
  </section>

  <!-- Banner Promocional Ultra Atractivo -->
  <section class="py-16 lg:py-20 bg-gradient-to-br from-primary-600 via-primary-500 to-primary-700 relative overflow-hidden">
    <!-- Elementos decorativos animados -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-24 -left-24 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/5 rounded-full blur-3xl"></div>
    </div>

    <!-- Patrón de puntos -->
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 30px 30px;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Contenido izquierda -->
        <div class="text-white space-y-6 lg:space-y-8">

          <!-- Badge flotante -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-md rounded-full text-sm font-semibold animate-bounce">
            <i class="fas fa-fire text-yellow-300"></i>
            <span>OFERTA ESPECIAL</span>
          </div>

          <!-- Título principal -->
          <div class="space-y-4">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-black leading-tight">
              Declaraciones SRI
              <span class="block text-yellow-300">desde $15 USD</span>
            </h2>

            <p class="text-lg md:text-xl text-primary-100 leading-relaxed">
              Mantén tu negocio al día con el SRI sin complicaciones.
              Precios accesibles y servicio profesional garantizado.
            </p>
          </div>

          <!-- Lista de beneficios -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <a href="/servicios" class="flex items-center gap-3 hover:scale-105 transition-transform duration-200 group">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg group-hover:bg-green-500">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold group-hover:text-yellow-300 transition-colors">Declaraciones</span>
            </a>

            <a href="/servicios" class="flex items-center gap-3 hover:scale-105 transition-transform duration-200 group">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg group-hover:bg-green-500">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold group-hover:text-yellow-300 transition-colors">Retenciones básicas</span>
            </a>

            <a href="/servicios" class="flex items-center gap-3 hover:scale-105 transition-transform duration-200 group">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg group-hover:bg-green-500">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold group-hover:text-yellow-300 transition-colors">Sin Multas SRI</span>
            </a>

            <a href="/servicios" class="flex items-center gap-3 hover:scale-105 transition-transform duration-200 group">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg group-hover:bg-green-500">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold group-hover:text-yellow-300 transition-colors">Presentación en línea</span>
            </a>
          </div>

          <!-- Nota aclaratoria -->
          <div class="bg-yellow-400/20 backdrop-blur-sm border border-yellow-300/30 rounded-xl p-3 mt-4">
            <p class="text-xs text-white font-medium">
              <i class="fas fa-info-circle"></i> Precio aplica para declaraciones básicas. Declaraciones con mayor complejidad tienen costo adicional según análisis.
            </p>
          </div>

          <!-- CTA Principal -->
          <div class="pt-4">
            <button
                onclick="sendWhatsApp('Hola! Me interesa el servicio de declaraciones SRI desde $15. ¿Podrían darme más información?')"
                class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-10 py-5 bg-white hover:bg-gray-100 text-primary-600 font-black text-lg rounded-xl transition-all duration-300 shadow-2xl hover:shadow-xl hover:scale-105 group"
            >
              <i class="fab fa-whatsapp text-2xl text-green-500"></i>
              <span>Consultar por WhatsApp</span>
              <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </button>
          </div>

          <!-- Garantía -->
          <div class="flex items-center gap-3 pt-4">
            <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
              <i class="fas fa-shield-alt text-yellow-300 text-xl"></i>
            </div>
            <div>
              <p class="font-semibold text-sm">100% Garantizado</p>
              <p class="text-xs text-primary-100">Cumplimiento tributario asegurado</p>
            </div>
          </div>

        </div>

        <!-- Contenido derecha - Precio destacado -->
        <div class="relative">

          <!-- Card principal de precio -->
          <div class="relative bg-white rounded-3xl p-8 lg:p-12 shadow-2xl transform hover:scale-105 transition-all duration-300">

            <!-- Badge top -->
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <div class="bg-gradient-to-r from-yellow-400 to-orange-400 text-gray-900 px-6 py-2 rounded-full text-sm font-black shadow-lg">
                MEJOR PRECIO
              </div>
            </div>

            <div class="text-center space-y-6 pt-4">

              <!-- Precio viejo tachado -->
              <div class="text-gray-400 text-2xl font-bold line-through">
                $45 USD
              </div>

              <!-- Precio actual -->
              <div class="space-y-2">
                <div class="flex items-start justify-center gap-2">
                  <span class="text-4xl font-black text-gray-900 pt-2">$</span>
                  <span class="text-8xl font-black text-primary-600">15</span>
                </div>
                <p class="text-xl text-gray-600 font-semibold">por declaración mínima</p>
              </div>

              <!-- Descuento badge -->
              <div class="inline-block bg-red-500 text-white px-6 py-2 rounded-full font-black text-lg shadow-lg">
                AHORRA 67%
              </div>

              <!-- Características incluidas -->
              <div class="border-t-2 border-gray-200 pt-6 space-y-4">
                <p class="text-sm font-bold text-gray-900 uppercase tracking-wide">Incluye:</p>

                <div class="space-y-3 text-left">
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Revisión completa de documentos</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Asesoría personalizada</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Presentación en línea SRI</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Certificado de declaración</span>
                  </div>
                </div>
              </div>

              <!-- Urgencia -->
              <div class="bg-yellow-50 border-2 border-yellow-300 rounded-xl p-4">
                <div class="flex items-center gap-2 justify-center text-yellow-800">
                  <i class="fas fa-clock"></i>
                  <p class="text-sm font-bold">Promoción por tiempo limitado</p>
                </div>
              </div>

            </div>
          </div>

          <!-- Decoración flotante -->
          <div class="absolute -z-10 -bottom-6 -right-6 w-full h-full bg-gradient-to-br from-yellow-300 to-orange-400 rounded-3xl opacity-20 blur-xl"></div>

        </div>

      </div>
    </div>
  </section>

  <!-- Content Section con Imagen + Lista de beneficios -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Imagen a la izquierda -->
        <div class="relative">
          <div class="relative w-full h-[400px] lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl">
            <img
                src={nosotrosImage.src}
                alt="Equipo Contalogic"
                class="w-full h-full object-cover"
            />
          </div>
          <!-- Decoración circular azul -->
          <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-primary-500 rounded-full opacity-20 blur-2xl"></div>
        </div>

        <!-- Contenido a la derecha -->
        <div class="space-y-6">
          <div class="inline-block px-4 py-2 bg-primary-50 text-primary-600 rounded-full text-sm font-semibold">
            SOBRE NOSOTROS
          </div>

          <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 leading-tight">
            Gestión Contable y Planificación Tributaria
          </h2>

          <p class="text-lg text-gray-600 leading-relaxed">
