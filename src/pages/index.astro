---
// src/pages/index.astro - CONTALOGIC
import BaseLayout from '../layouts/BaseLayout.astro';

// Importar las imágenes
import heroImage from '../assets/hero.jpeg';
import nosotrosImage from '../assets/nosotros.jpeg';
import sectionImage from '../assets/section.jpeg';

// Servicios principales - Adaptados para Contalogic
const services = [
  {
    title: 'Asesoría Tributaria SRI',
    description: 'Declaraciones, anexos y gestión completa ante el SRI. Mantén tu empresa al día con las obligaciones tributarias.',
    icon: 'fas fa-calculator',
    image: sectionImage.src,
    logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/e/e8/SRI.svg/1280px-SRI.svg.png'
  },
  {
    title: 'Gestión Laboral IESS',
    description: 'Roles de pago, avisos de entrada y salida, préstamos y gestión completa de seguridad social.',
    icon: 'fas fa-users',
    image: heroImage.src,
    logo: 'https://upload.wikimedia.org/wikipedia/commons/c/c0/IESS_Ecuador.jpg'
  },
  {
    title: 'Ministerio de Trabajo',
    description: 'Contratos laborales, actas de finiquito, décimos y todo lo relacionado con el Ministerio de Trabajo.',
    icon: 'fas fa-briefcase',
    image: nosotrosImage.src,
    logo: 'https://portalecuador.com/entities/ministerio-del-trabajo-ecuador-logo.png'
  }
];

// Estadísticas
const stats = [
  { number: '1245', label: 'Clientes Activos' },
  { number: '6524', label: 'Declaraciones SRI' },
  { number: '8248', label: 'Roles Procesados' },
  { number: '9731', label: 'Horas de Asesoría' }
];

// Equipo
const team = [
  {
    name: 'Eugenia Guerrero',
    role: 'CEO & Contadora Principal',
    image: nosotrosImage.src,
    social: {
      linkedin: '#',
      twitter: '#',
      facebook: '#',
      instagram: '#'
    }
  },
  {
    name: 'María González',
    role: 'Especialista IESS',
    image: heroImage.src,
    social: {
      linkedin: '#',
      twitter: '#',
      facebook: '#',
      instagram: '#'
    }
  },
  {
    name: 'Carlos Pérez',
    role: 'Asesor Tributario',
    image: sectionImage.src,
    social: {
      linkedin: '#',
      twitter: '#',
      facebook: '#',
      instagram: '#'
    }
  }
];
---

<BaseLayout
    title="Contalogic | Servicios Contables Profesionales en Ecuador"
    description="Contalogic ofrece servicios contables profesionales, asesoría tributaria SRI, gestión laboral IESS y consultoría empresarial en Ecuador."
>

  <!-- Hero Section - Similar a la referencia -->
  <section class="relative py-20 lg:py-32 bg-gradient-to-r from-gray-50 to-gray-100 overflow-hidden">
    <!-- Background decorativo -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-20 left-20 w-64 h-64 bg-primary-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-primary-300 rounded-full blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto space-y-8">

        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white shadow-md rounded-full text-sm font-medium text-gray-700">
          <i class="fas fa-certificate text-primary-500"></i>
          <span>Servicios Contables Profesionales</span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          Contabilidad y Asesoría <br />
          <span class="gradient-text">Tributaria Integral</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Simplificamos la gestión contable y tributaria de tu empresa.
          Expertos en SRI, IESS y Ministerio de Trabajo en Ecuador.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
          <a
              href="#contacto"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
          >
            <span>Comenzar Ahora</span>
            <i class="fas fa-arrow-right"></i>
          </a>

          <a
              href="#servicios"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent hover:bg-gray-100 text-gray-700 font-semibold rounded-lg transition-all duration-300 border-2 border-gray-300"
          >
            <span>Conocer Más</span>
          </a>
        </div>

      </div>
    </div>
  </section>

  <!-- Banner Promocional Ultra Atractivo -->
  <section class="py-16 lg:py-20 bg-gradient-to-br from-primary-600 via-primary-500 to-primary-700 relative overflow-hidden">
    <!-- Elementos decorativos animados -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-24 -left-24 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/5 rounded-full blur-3xl"></div>
    </div>

    <!-- Patrón de puntos -->
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 30px 30px;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Contenido izquierda -->
        <div class="text-white space-y-6 lg:space-y-8">

          <!-- Badge flotante -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-md rounded-full text-sm font-semibold animate-bounce">
            <i class="fas fa-fire text-yellow-300"></i>
            <span>OFERTA ESPECIAL</span>
          </div>

          <!-- Título principal -->
          <div class="space-y-4">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-black leading-tight">
              Declaraciones SRI
              <span class="block text-yellow-300">desde $15 USD</span>
            </h2>

            <p class="text-lg md:text-xl text-primary-100 leading-relaxed">
              Mantén tu negocio al día con el SRI sin complicaciones.
              Precios accesibles y servicio profesional garantizado.
            </p>
          </div>

          <!-- Lista de beneficios -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold">Declaración IVA</span>
            </div>

            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold">Retenciones</span>
            </div>

            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold">Sin Multas</span>
            </div>

            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-xl flex items-center justify-center shadow-lg">
                <i class="fas fa-check text-white text-lg"></i>
              </div>
              <span class="font-semibold">Rápido y Seguro</span>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <a
                href="/contacto"
                class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-100 text-primary-600 font-bold rounded-xl transition-all duration-300 shadow-2xl hover:shadow-xl hover:scale-105 group"
            >
              <span>Solicitar Ahora</span>
              <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </a>

            <button
                onclick="sendWhatsApp('Hola! Me interesa el servicio de declaraciones SRI desde $15. ¿Podrían darme más información?')"
                class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-green-500 hover:bg-green-600 text-white font-bold rounded-xl transition-all duration-300 shadow-xl hover:scale-105"
            >
              <i class="fab fa-whatsapp text-xl"></i>
              <span>Consultar por WhatsApp</span>
            </button>
          </div>

          <!-- Garantía -->
          <div class="flex items-center gap-3 pt-4">
            <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
              <i class="fas fa-shield-alt text-yellow-300 text-xl"></i>
            </div>
            <div>
              <p class="font-semibold text-sm">100% Garantizado</p>
              <p class="text-xs text-primary-100">Cumplimiento tributario asegurado</p>
            </div>
          </div>

        </div>

        <!-- Contenido derecha - Precio destacado -->
        <div class="relative">

          <!-- Card principal de precio -->
          <div class="relative bg-white rounded-3xl p-8 lg:p-12 shadow-2xl transform hover:scale-105 transition-all duration-300">

            <!-- Badge top -->
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <div class="bg-gradient-to-r from-yellow-400 to-orange-400 text-gray-900 px-6 py-2 rounded-full text-sm font-black shadow-lg">
                MEJOR PRECIO
              </div>
            </div>

            <div class="text-center space-y-6 pt-4">

              <!-- Precio viejo tachado -->
              <div class="text-gray-400 text-2xl font-bold line-through">
                $45 USD
              </div>

              <!-- Precio actual -->
              <div class="space-y-2">
                <div class="flex items-start justify-center gap-2">
                  <span class="text-4xl font-black text-gray-900 pt-2">$</span>
                  <span class="text-8xl font-black text-primary-600">15</span>
                </div>
                <p class="text-xl text-gray-600 font-semibold">por declaración</p>
              </div>

              <!-- Descuento badge -->
              <div class="inline-block bg-red-500 text-white px-6 py-2 rounded-full font-black text-lg shadow-lg">
                AHORRA 67%
              </div>

              <!-- Características incluidas -->
              <div class="border-t-2 border-gray-200 pt-6 space-y-4">
                <p class="text-sm font-bold text-gray-900 uppercase tracking-wide">Incluye:</p>

                <div class="space-y-3 text-left">
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Revisión completa de documentos</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Asesoría personalizada</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Presentación en línea SRI</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                    <span class="text-gray-700">Certificado de declaración</span>
                  </div>
                </div>
              </div>

              <!-- Urgencia -->
              <div class="bg-yellow-50 border-2 border-yellow-300 rounded-xl p-4">
                <div class="flex items-center gap-2 justify-center text-yellow-800">
                  <i class="fas fa-clock"></i>
                  <p class="text-sm font-bold">Promoción por tiempo limitado</p>
                </div>
              </div>

            </div>
          </div>

          <!-- Decoración flotante -->
          <div class="absolute -z-10 -bottom-6 -right-6 w-full h-full bg-gradient-to-br from-yellow-300 to-orange-400 rounded-3xl opacity-20 blur-xl"></div>

        </div>

      </div>
    </div>
  </section>

  <!-- Content Section con Imagen + Lista de beneficios -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Imagen a la izquierda -->
        <div class="relative">
          <div class="relative w-full h-[400px] lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl">
            <img
                src={nosotrosImage.src}
                alt="Equipo Contalogic"
                class="w-full h-full object-cover"
            />
          </div>
          <!-- Decoración circular azul -->
          <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-primary-500 rounded-full opacity-20 blur-2xl"></div>
        </div>

        <!-- Contenido a la derecha -->
        <div class="space-y-6">
          <div class="inline-block px-4 py-2 bg-primary-50 text-primary-600 rounded-full text-sm font-semibold">
            SOBRE NOSOTROS
          </div>

          <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 leading-tight">
            Gestión Contable y Planificación Tributaria
          </h2>

          <p class="text-lg text-gray-600 leading-relaxed">
            En Contalogic transformamos la complejidad contable en soluciones simples.
            Nuestro equipo de expertos se encarga de toda la gestión tributaria, laboral y contable
            para que puedas enfocarte en hacer crecer tu negocio.
          </p>

          <!-- Lista de beneficios con checks -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4">
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-check text-green-600 text-xs"></i>
              </div>
              <span class="text-gray-700">Asesoría Tributaria SRI</span>
            </div>

            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-check text-green-600 text-xs"></i>
              </div>
              <span class="text-gray-700">Estados Financieros NIIF</span>
            </div>

            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-check text-green-600 text-xs"></i>
              </div>
              <span class="text-gray-700">Gestión Laboral IESS</span>
            </div>

            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-check text-green-600 text-xs"></i>
              </div>
              <span class="text-gray-700">Cumplimiento Garantizado</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Estadísticas -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {stats.map(stat => (
            <div class="text-center">
              <div class="text-4xl lg:text-5xl font-bold text-primary-600 mb-2">{stat.number}</div>
              <div class="text-sm text-gray-600 font-medium">{stat.label}</div>
            </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What We Offer Section -->
  <section id="servicios" class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-block px-4 py-2 bg-primary-50 text-primary-600 rounded-full text-sm font-semibold mb-6">
          NUESTROS SERVICIOS
        </div>

        <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-4">
          Lo Que Ofrecemos
        </h2>

        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Servicios contables integrales adaptados a las necesidades de tu empresa
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.map((service, index) => (
            <div class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">

              <!-- Imagen -->
              <div class="relative h-64 overflow-hidden">
                <img
                    src={service.image}
                    alt={service.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <!-- Overlay con logo institucional -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>

                {service.logo ? (
                  <div class="absolute bottom-6 left-6">
                    <div class="w-20 h-20 bg-white rounded-2xl flex items-center justify-center shadow-xl p-3 group-hover:scale-110 transition-transform duration-300">
                      <img
                          src={service.logo}
                          alt={`Logo ${service.title}`}
                          class="w-full h-full object-contain"
                      />
                    </div>
                  </div>
                ) : (
                  <div class="absolute bottom-6 left-6">
                    <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center shadow-xl">
                      <i class={`${service.icon} text-white text-2xl`}></i>
                    </div>
                  </div>
                )}
              </div>

              <!-- Contenido -->
              <div class="p-6 space-y-4">
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                  {service.title}
                </h3>

                <p class="text-gray-600 leading-relaxed">
                  {service.description}
                </p>

                <a
                    href="/servicios"
                    class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700 transition-colors group/link"
                >
                  <span>Leer Más</span>
                  <i class="fas fa-arrow-right group-hover/link:translate-x-1 transition-transform"></i>
                </a>
              </div>

            </div>
        ))}
      </div>

    </div>
  </section>

  <!-- Meet Our Advisors Section -->
  <section class="py-16 lg:py-24 section-primary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold mb-6 text-white">
          NUESTRO EQUIPO
        </div>

        <h2 class="text-3xl lg:text-5xl font-bold mb-4 text-white">
          Conoce a Nuestros Asesores
        </h2>

        <p class="text-lg text-white/90 max-w-2xl mx-auto">
          Profesionales certificados comprometidos con tu éxito empresarial
        </p>
      </div>

      <!-- Team Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {team.map((member, index) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">

              <!-- Imagen -->
              <div class="relative h-80 overflow-hidden bg-gray-200">
                <img
                    src={member.image}
                    alt={member.name}
                    class="w-full h-full object-cover"
                />
              </div>

              <!-- Info -->
              <div class="p-6 text-center space-y-4">
                <h3 class="text-xl font-bold text-gray-900">{member.name}</h3>
                <p class="text-gray-600 text-sm">{member.role}</p>

                <!-- Social Links -->
                <div class="flex justify-center gap-3 pt-2">
                  <a href={member.social.linkedin} class="w-10 h-10 bg-gray-100 hover:bg-primary-500 text-gray-600 hover:text-white rounded-full flex items-center justify-center transition-all duration-300">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                  <a href={member.social.twitter} class="w-10 h-10 bg-gray-100 hover:bg-primary-500 text-gray-600 hover:text-white rounded-full flex items-center justify-center transition-all duration-300">
                    <i class="fab fa-twitter"></i>
                  </a>
                  <a href={member.social.facebook} class="w-10 h-10 bg-gray-100 hover:bg-primary-500 text-gray-600 hover:text-white rounded-full flex items-center justify-center transition-all duration-300">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                  <a href={member.social.instagram} class="w-10 h-10 bg-gray-100 hover:bg-primary-500 text-gray-600 hover:text-white rounded-full flex items-center justify-center transition-all duration-300">
                    <i class="fab fa-instagram"></i>
                  </a>
                </div>
              </div>

            </div>
        ))}
      </div>

    </div>
  </section>

  <!-- Contact Section -->
  <section id="contacto" class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-4">
          ¿Listo para Simplificar tu Contabilidad?
        </h2>
        <p class="text-lg text-gray-600">
          Contáctanos hoy y descubre cómo podemos ayudar a tu empresa
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">

        <!-- Contact Info -->
        <div class="space-y-6">
          <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <i class="fas fa-envelope text-primary-600 text-xl"></i>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
              <a href="mailto:contacto@contalogic.com" class="text-gray-600 hover:text-primary-600 transition-colors">
                contacto@contalogic.com
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <i class="fab fa-whatsapp text-primary-600 text-xl"></i>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">WhatsApp</h4>
              <a href="tel:+593987919930" class="text-gray-600 hover:text-primary-600 transition-colors">
                +593 98 791 9930
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <i class="fas fa-map-marker-alt text-primary-600 text-xl"></i>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Ubicación</h4>
              <p class="text-gray-600">Cuenca, Azuay, Ecuador</p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Solicita tu Consulta</h3>

          <form class="space-y-6" id="contact-form">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nombre completo</label>
              <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                  placeholder="Tu nombre completo"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Correo electrónico</label>
              <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                  placeholder="tu@email.com"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Mensaje</label>
              <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  placeholder="¿En qué podemos ayudarte?"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
              ></textarea>
            </div>

            <button
                type="submit"
                class="w-full bg-primary-500 hover:bg-primary-600 text-white font-semibold py-4 rounded-lg transition-all duration-300 flex items-center justify-center gap-2 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <i class="fas fa-paper-plane"></i>
              <span>Enviar Mensaje</span>
            </button>
          </form>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<script>
  // Handle contact form submission
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();

    const formData = new FormData(e.target as HTMLFormElement);
    const name = formData.get('name');
    const email = formData.get('email');
    const message = formData.get('message');

    // Create WhatsApp message
    const whatsappMessage = `Hola! Soy ${name}. ${message} Mi email es: ${email}`;

    // Send via WhatsApp
    (window as any).sendWhatsApp(whatsappMessage);

    // Reset form
    (e.target as HTMLFormElement).reset();

    // Show success message
    alert('Mensaje enviado! Te contactaremos pronto por WhatsApp.');
  });
</script>
