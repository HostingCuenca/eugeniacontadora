---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';

// Importar las imágenes
import heroImage from '../assets/hero.jpeg';
import nosotrosImage from '../assets/nosotros.jpeg';
import sectionImage from '../assets/section.jpeg';

// Servicios principales con logos oficiales corregidos
const featuredServices = [
  {
    title: 'Asesoría Tributaria SRI',
    description: 'Declaraciones, anexos, devoluciones y todos los trámites tributarios ante el SRI.',
    icon: 'fas fa-file-invoice-dollar',
    color: 'from-blue-500 to-blue-600',
    features: ['Declaraciones IR e IVA', 'Retenciones en la Fuente', 'Anexos (ATS, REBEFICS)', 'Devoluciones', 'Informe de Cumplimiento Tributario'],
    logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/e/e8/SRI.svg/1280px-SRI.svg.png'
  },
  {
    title: 'Gestión Laboral IESS',
    description: 'Roles de pago, avisos IESS, préstamos y gestión completa de recursos humanos.',
    icon: 'fas fa-users',
    color: 'from-green-500 to-green-600',
    features: ['Roles de Pago', 'Aviso de Entrada', 'NOMINA', 'Avisos de Salida', 'Prestamos Hipotecarios', 'Prestamos Quirografarios'],
    logo: 'https://upload.wikimedia.org/wikipedia/commons/c/c0/IESS_Ecuador.jpg'
  },
  {
    title: 'Ministerio de Trabajo',
    description: 'Contratos laborales, actas de finiquito y gestión de beneficios sociales.',
    icon: 'fas fa-briefcase',
    color: 'from-orange-500 to-orange-600',
    features: ['Contratos', 'Actas de Finiquito', 'XIII Sueldo', 'XIV Sueldo', 'Utilidades', 'Registro de novedades'],
    logo: 'https://portalecuador.com/entities/ministerio-del-trabajo-ecuador-logo.png'
  },
  {
    title: 'Estados Financieros NIIF',
    description: 'Elaboración de estados financieros bajo NIIF y análisis empresarial.',
    icon: 'fas fa-chart-line',
    color: 'from-purple-500 to-purple-600',
    features: ['Estados NIIF', 'Balance General', 'Estado de Resultados', 'Análisis financiero'],
    logo: null
  }
];

// Servicios detallados SRI
const sriServices = [
  {
    category: 'DECLARACIONES',
    items: ['Declaraciones de Impuesto a la Renta', 'Declaraciones de IVA', 'Declaración de Retenciones En la Fuente IR', 'Declaración Patrimonial']
  },
  {
    category: 'DEVOLUCIONES',
    items: ['Devolución de IR', 'Devolución de IVA Adultos Mayores', 'Devolución de RFIR']
  },
  {
    category: 'ANEXOS',
    items: ['Anexo transaccional-ATS', 'Anexo REBEFICS', 'Anexo de Gastos Personales', 'Anexo REDEP', 'Anexo Dividendo', 'Anexo ICE']
  },
  {
    category: 'INFORMES-TRAMITES',
    items: ['Informe de Cumplimiento Tributario-ICT', 'Otros trámites especializados']
  }
];

// Opciones de servicio (sin precios)
const serviceOptions = [
  {
    name: 'Plan Básico Personal',
    subtitle: 'Ideal para personas naturales',
    description: 'Servicios esenciales para freelancers y emprendedores',
    features: ['Declaración IR anual', 'Asesoría tributaria básica', 'Soporte WhatsApp', 'Consulta mensual incluida'],
    buttonText: 'Más Información'
  },
  {
    name: 'Plan Empresarial Completo',
    subtitle: 'Solución integral para empresas',
    description: 'Gestión contable y tributaria completa',
    features: ['Contabilidad completa', 'Estados financieros', 'Todas las declaraciones', 'Gestión laboral IESS', 'Consultas ilimitadas', 'Soporte prioritario'],
    popular: true,
    buttonText: 'Solicitar Cotización'
  },
  {
    name: 'Servicios Específicos',
    subtitle: 'Por demanda según necesidad',
    description: 'Flexibilidad total para servicios puntuales',
    features: ['Pago por servicio', 'Sin compromisos', 'Flexibilidad total', 'Asesoría especializada', 'Trámites urgentes'],
    buttonText: 'Consultar'
  }
];

// Estadísticas
const stats = [
  { number: '15+', label: 'Años de experiencia' },
  { number: '500+', label: 'Clientes satisfechos' },
  { number: '1000+', label: 'Trámites SRI' },
  { number: '24/7', label: 'Soporte disponible' }
];
---

<BaseLayout
    title="Eugenia Guerrero CPA | Mejores Servicios Contables en Cuenca Ecuador"
    description="Servicios contables profesionales en Cuenca Ecuador. Asesoría tributaria SRI, IESS, Ministerio de Trabajo. +15 años de experiencia. ¡Consulta gratuita!"
>

  <!-- Hero Section -->
  <section class="py-16 lg:py-24 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Left Content -->
        <div class="space-y-8 lg:pr-8">
          <!-- Badge simple -->
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
            <i class="fas fa-certificate text-primary-600"></i>
            <span>Contadora Pública Autorizada</span>
          </div>

          <!-- Main Headline -->
          <div class="space-y-6">
            <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight">
              Los mejores servicios
              <span class="text-primary-600 block">contables</span>
              en Cuenca
            </h1>

            <p class="text-xl text-gray-600 leading-relaxed">
              Asesoría contable profesional con más de 15 años de experiencia.
              Trámites SRI, IESS, Ministerio de Trabajo y consultoría empresarial en Ecuador.
            </p>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a
                href="/contacto"
                class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-md hover:shadow-lg"
            >
              <i class="fas fa-calendar-check"></i>
              <span>Consulta Gratuita</span>
            </a>

            <a
                href="/servicios"
                class="inline-flex items-center justify-center gap-2 px-8 py-4 text-gray-700 hover:text-primary-600 font-semibold transition-all duration-200"
            >
              <span>Ver Servicios</span>
              <i class="fas fa-arrow-right"></i>
            </a>
          </div>

          <!-- Stats integradas -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 pt-8">
            {stats.map(stat => (
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-1">{stat.number}</div>
                  <div class="text-sm text-gray-500">{stat.label}</div>
                </div>
            ))}
          </div>
        </div>

        <!-- Right Content - Image limpia -->
        <div class="relative">
          <div class="w-full h-96 lg:h-[500px] rounded-2xl overflow-hidden">
            <img
                src={heroImage.src}
                alt="Eugenia Guerrero - Contadora en Cuenca Ecuador"
                class="w-full h-full object-cover"
            />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="sobre-nosotros" class="py-16 lg:py-24 bg-gray-50 observe">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Left Content - Image clean -->
        <div class="relative">
          <div class="relative w-full h-[500px] rounded-3xl overflow-hidden shadow-xl">
            <img
                src={nosotrosImage.src}
                alt="Eugenia Guerrero CPA - Oficina Contable Cuenca"
                class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Right content -->
        <div class="space-y-8 lg:pl-8">
          <div class="space-y-4">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-secondary-100 text-secondary-700 rounded-full text-sm font-medium">
              <i class="fas fa-star"></i>
              <span>Sobre Mí</span>
            </div>

            <!-- Headline -->
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
              Eugenia Guerrero
              <span class="text-primary-600">CPA</span>
            </h2>

            <!-- Description -->
            <p class="text-lg text-gray-600 leading-relaxed">
              Contadora Pública con más de 15 años de experiencia en Cuenca Ecuador.
              Especializada en asesoría contable, trámites SRI, IESS, Ministerio de Trabajo
              y consultoría empresarial para empresas de todos los tamaños.
            </p>
          </div>

          <!-- Mission & Vision Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
                <i class="fas fa-bullseye text-primary-600"></i>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Nuestra Misión</h3>
              <p class="text-gray-600 text-sm">Brindar la mejor asesoría contable en Cuenca, democratizando el acceso a servicios contables de calidad.</p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300">
              <div class="w-12 h-12 bg-secondary-100 rounded-xl flex items-center justify-center mb-4">
                <i class="fas fa-eye text-secondary-600"></i>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Nuestra Visión</h3>
              <p class="text-gray-600 text-sm">Ser la referencia en servicios contables en Cuenca y el Azuay, facilitando el crecimiento empresarial.</p>
            </div>
          </div>

          <!-- Certifications -->
          <div class="flex flex-wrap gap-3">
            <div class="flex items-center gap-2 px-3 py-2 bg-white border border-gray-200 rounded-xl shadow-sm">
              <i class="fas fa-certificate text-primary-600"></i>
              <span class="text-sm font-medium text-gray-700">CPA Certificada Ecuador</span>
            </div>
            <div class="flex items-center gap-2 px-3 py-2 bg-white border border-gray-200 rounded-xl shadow-sm">
              <i class="fas fa-graduation-cap text-primary-600"></i>
              <span class="text-sm font-medium text-gray-700">Especialista NIIF</span>
            </div>
            <div class="flex items-center gap-2 px-3 py-2 bg-white border border-gray-200 rounded-xl shadow-sm">
              <i class="fas fa-shield-alt text-primary-600"></i>
              <span class="text-sm font-medium text-gray-700">Autorizada SRI</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="servicios" class="py-16 lg:py-24 bg-white observe">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-6">
          <i class="fas fa-briefcase"></i>
          <span>Servicios Contables en Cuenca</span>
        </div>

        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Asesoría <span class="gradient-text">contable</span> integral
        </h2>

        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Servicios especializados con entidades oficiales del Ecuador: SRI, IESS y Ministerio de Trabajo
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {featuredServices.map((service, index) => (
            <div class="group text-center space-y-6 p-6 rounded-2xl bg-gray-50 hover:bg-white hover:shadow-xl transition-all duration-300 border border-transparent hover:border-gray-200">

              <!-- Logo or Icon -->
              <div class="flex justify-center">
                {service.logo ? (
                    <div class="w-20 h-20 bg-white rounded-2xl flex items-center justify-center shadow-lg border border-gray-200 group-hover:scale-110 transition-transform duration-300 p-2">
                      <img
                          src={service.logo}
                          alt={`Logo ${service.title}`}
                          class="w-full h-full object-contain"
                      />
                    </div>
                ) : (
                    <div class={`w-16 h-16 bg-gradient-to-br ${service.color} rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
                      <i class={`${service.icon} text-white text-2xl`}></i>
                    </div>
                )}
              </div>

              <!-- Content -->
              <div class="space-y-4">
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                  {service.title}
                </h3>

                <p class="text-gray-600 leading-relaxed text-sm">
                  {service.description}
                </p>

                <!-- Features List -->
                <div class="space-y-2">
                  {service.features.map(feature => (
                      <div class="flex items-center justify-center gap-2 text-sm text-gray-600">
                        <div class="w-1.5 h-1.5 bg-primary-400 rounded-full"></div>
                        <span>{feature}</span>
                      </div>
                  ))}
                </div>
              </div>

              <!-- CTA -->
              <a
                  href="/servicios"
                  class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700 transition-colors group"
              >
                <span>Ver detalles</span>
                <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
              </a>

            </div>
        ))}
      </div>

      <!-- SRI Services Detail -->
      <div class="mt-16 bg-blue-50 rounded-3xl p-8">
        <div class="text-center mb-8">
          <div class="flex justify-center mb-4">
            <img
                src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e8/SRI.svg/1280px-SRI.svg.png"
                alt="Logo SRI"
                class="h-16 object-contain"
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Servicios Especializados SRI</h3>
          <p class="text-gray-600">Todos los trámites tributarios ante el Servicio de Rentas Internas</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {sriServices.map(category => (
              <div class="bg-white rounded-xl p-6 shadow-sm">
                <h4 class="font-bold text-primary-600 mb-4 text-center">{category.category}</h4>
                <ul class="space-y-2">
                  {category.items.map(item => (
                      <li class="text-sm text-gray-700 flex items-start gap-2">
                        <div class="w-1.5 h-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                        <span>{item}</span>
                      </li>
                  ))}
                </ul>
              </div>
          ))}
        </div>
      </div>

      <!-- CTA Button -->
      <div class="text-center mt-12">
        <a
            href="/servicios"
            class="inline-flex items-center gap-2 px-8 py-4 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl transition-all duration-200 hover:scale-105 shadow-lg"
        >
          <span>Ver todos los servicios</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

    </div>
  </section>

  <!-- Delegation Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-secondary-50 to-primary-50 observe">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Left content -->
        <div class="space-y-8">
          <div class="space-y-4">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-secondary-100 text-secondary-700 rounded-full text-sm font-medium">
              <i class="fas fa-user-check"></i>
              <span>Delega y Enfócate</span>
            </div>

            <!-- Headline -->
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
              Deja que <span class="gradient-text">nosotros</span> nos encarguemos
            </h2>

            <!-- Description -->
            <p class="text-lg text-gray-600 leading-relaxed">
              Mientras tú te enfocas en hacer crecer tu negocio, nosotros nos encargamos
              de toda tu contabilidad, trámites SRI, IESS, Ministerio de Trabajo y asesoría fiscal.
              Manejo profesional de software contable y gestión tributaria completa.
            </p>
          </div>

          <!-- Benefits -->
          <div class="space-y-6">
            <div class="flex items-start gap-4 group">
              <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <i class="fas fa-clock text-green-600"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Ahorra Tiempo</h3>
                <p class="text-gray-600 text-sm">Enfócate en tu negocio principal mientras nosotros manejamos tu contabilidad</p>
              </div>
            </div>

            <div class="flex items-start gap-4 group">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <i class="fas fa-shield-alt text-blue-600"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Cumplimiento Garantizado</h3>
                <p class="text-gray-600 text-sm">Sin multas ni problemas con SRI, IESS o Ministerio de Trabajo. Cumplimiento al 100%</p>
              </div>
            </div>

            <div class="flex items-start gap-4 group">
              <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <i class="fas fa-chart-line text-purple-600"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Decisiones Informadas</h3>
                <p class="text-gray-600 text-sm">Reportes financieros claros y oportunos para mejores decisiones</p>
              </div>
            </div>
          </div>

          <a
              href="/contacto"
              class="inline-flex items-center gap-2 px-6 py-4 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl transition-all duration-200 hover:scale-105 shadow-lg"
          >
            <i class="fas fa-handshake"></i>
            <span>Delegar mi contabilidad</span>
          </a>
        </div>

        <!-- Right content - Image clean -->
        <div class="relative">
          <div class="relative w-full h-[500px] rounded-3xl overflow-hidden shadow-xl">
            <img
                src={sectionImage.src}
                alt="Empresario delegando contabilidad - Cuenca Ecuador"
                class="w-full h-full object-cover"
            />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Service Options Section -->
  <section id="opciones" class="py-16 lg:py-24 bg-white observe">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-secondary-100 text-secondary-700 rounded-full text-sm font-medium mb-6">
          <i class="fas fa-cogs"></i>
          <span>Opciones de Servicio</span>
        </div>

        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Encuentra la <span class="gradient-text">opción perfecta</span> para ti
        </h2>

        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Diferentes modalidades de asesoría contable adaptadas a tus necesidades empresariales
        </p>
      </div>

      <!-- Options Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {serviceOptions.map((option, index) => (
            <div class={`relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border ${option.popular ? 'border-primary-300 ring-4 ring-primary-100 scale-105' : 'border-gray-200'}`}>

              {option.popular && (
                  <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <div class="bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-6 py-2 rounded-full text-sm font-semibold shadow-lg">
                      Más Solicitado
                    </div>
                  </div>
              )}

              <!-- Option Header -->
              <div class="text-center mb-8">
                <div class={`w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 ${option.popular ? 'bg-gradient-to-br from-primary-500 to-secondary-500' : 'bg-gradient-to-br from-gray-500 to-gray-600'}`}>
                  <i class="fas fa-award text-white text-2xl"></i>
                </div>

                <h3 class="text-2xl font-bold text-gray-900 mb-1">{option.name}</h3>
                <p class="text-sm text-gray-600 mb-1">{option.subtitle}</p>
                <p class="text-gray-600 mb-4">{option.description}</p>
              </div>

              <!-- Features -->
              <div class="space-y-4 mb-8">
                {option.features.map(feature => (
                    <div class="flex items-center gap-3">
                      <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-check text-green-600 text-xs"></i>
                      </div>
                      <span class="text-gray-700 text-sm">{feature}</span>
                    </div>
                ))}
              </div>

              <!-- CTA Button -->
              <button
                  onclick={`sendWhatsApp('Hola! Me interesa conocer más sobre ${option.name}. ¿Podrían darme más información y cotización?')`}
                  class={`block w-full text-center py-4 font-semibold rounded-2xl transition-all duration-300 ${option.popular ? 'bg-primary-600 hover:bg-primary-700 text-white' : 'bg-gray-600 hover:bg-gray-700 text-white'}`}
              >
                {option.buttonText}
              </button>

            </div>
        ))}
      </div>

    </div>
  </section>

  <!-- Contact Section -->
  <section id="contacto" class="py-16 lg:py-24 bg-gradient-to-br from-primary-600 to-primary-800 text-white relative overflow-hidden observe">

    <!-- Background Effects -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-20 w-32 h-32 border border-white/20 rounded-full animate-float"></div>
      <div class="absolute bottom-20 right-20 w-48 h-48 border border-white/20 rounded-full animate-float" style="animation-delay: 3s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 border border-white/10 rounded-full animate-float" style="animation-delay: 1s;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium mb-6">
          <i class="fas fa-envelope"></i>
          <span>Contáctanos</span>
        </div>

        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          ¿Listo para la mejor <span class="text-secondary-400">asesoría contable</span>?
        </h2>

        <p class="text-xl text-primary-100 max-w-3xl mx-auto">
          Contáctanos para asesoría contable profesional en Cuenca Ecuador.
          Primera consulta gratuita para evaluar tus necesidades.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

        <!-- Contact Form -->
